{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "*": ["node_modules/*", "typings/*"]
    },
    "strict": false
  },
  "exclude": ["node_modules"]
}
